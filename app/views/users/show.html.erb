<div class="mx-5">
  <div>

<%# card style %>


<div class="my-5">
<div class="row user-profile">
      <div class="col column">
        <div class="card my-2  ">

                <div class="card-body d-flex flex-column ">

                  <div class="d-flex justify-content-between align-items-center">
                      <div class="user-detail"> 
                      <h5 class="card-title"><%= @user.username%> </h5>
                      <p class="card-text"><%= pluralize(@user.articles.count, "article") %></p>
                      </div>
                      <div class="user-profile"> 
                      <% if @user.present? %>
                      <% if @user.image.attached? %>
                      <%= image_tag @user.image, class: "card-img-top profile-image" %>
                  <% else %>
                    <p class="card-img-top" alt="...">Image not found</p>
                  <% end %>
                <% end %>
                      </div>
                      </div>
                      <hr/>
                  <div class=" d-flex flex-wrap">
                      <%= link_to 'View Profile', @user, class: 'btn mx-2'  %>
                      <% if logged_in? && @user == current_user %>
                      <%= link_to 'Edit Profile', edit_user_path, class: 'btn mx-2'  %>
<%end%>

                  </div>

              </div>
        </div>
      </div>

</div>
</div>

<%# card style end  %>


 



    <%= render 'articles/article' %>
     <div class="flickr_pagination my-4">
    
    <%= will_paginate @articles, :container => false %>
  </div>
  </div>
</div>