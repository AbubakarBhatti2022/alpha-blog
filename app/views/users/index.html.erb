<div class="mx-5">
  <div class="text-center my-5">
    <h1>Alpha Bloggers</h1>
  </div>
</div>

<div class="flickr_pagination my-4">
    
    <%= will_paginate @users, :container => false %>
  </div>
<%# cards styling %>

<div class="mx-5 mb-5">
<div class="row ">
  <% @users.each do |user| %>
      <div class="col-lg-3 col-md-4 col-sm-6 column">
        <div class="card mb-4 ">

                <div class="card-body d-flex flex-column ">

                  <div class="d-flex justify-content-between align-items-center">
                      <div class="user-detail"> 
                      <h5 class="card-title"><%= user.username %></h5>
                      <p class="card-text"><%= pluralize(user.articles.count, "article") %></p>
                      </div>
                      <div class="user-profile"> 
                      <% if user.present? %>
                      <% if user.image.attached? %>
                    <%= image_tag user.image, class: "card-img-top", alt: "..."%>
                  <% else %>
                    <p class="card-img-top" alt="...">Image not found</p>
                  <% end %>
                <% end %>
                      </div>
                      </div>
                      <hr/>
                  <div class=" d-flex justify-content-between flex-wrap">
                      <%= link_to 'View Profile', user, class: 'btn'  %>

<% if logged_in? && (user == current_user || current_user.admin?) %>

                      <%= link_to 'Edit Profile', edit_user_path(user), class: 'btn' %> 
                      
                      <% end %>
                  </div>

              </div>
        </div>
      </div>
  <% end %>
</div>
</div>


<%# end %>