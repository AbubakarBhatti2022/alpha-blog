<div class="mx-5">
<div class="text-center my-5">
<h2> Categories <%= @category.name%> </h2>
</div>

<div class="row user-profile">
      <div class="col column">
        <div class="card my-2  ">

                <div class="card-body d-flex flex-column ">

                  <div class="d-flex justify-content-between align-items-center">
                      <div class="user-detail"> 
                      <h5 class="card-title"><%= @category.name.capitalize%> </h5>
                      <p class="card-text"><%= pluralize(@category.articles.count, "article") %></p>
                      </div>
                      
                      </div>
                      <hr/>
                  <div class=" d-flex flex-wrap">
                      <% if logged_in? && current_user.admin? %>
                      <%= link_to 'Edit Category Name', edit_category_path, class: 'btn mx-2'  %>
<%end%>

                  </div>

              </div>
        </div>
      </div>

</div>

 <%= render 'articles/article' %>
 
     <div class="flickr_pagination my-4">
    
    <%= will_paginate @articles, :container => false %>
  </div>
</div>




