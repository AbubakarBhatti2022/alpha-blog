
 <div class="container-fluide mx-5 my-5 " id="home-container">

            <div class="jumbotron show-jumbotron px-5">
            <h1 class="display-4">Article Details </h1>
            <p> <strong>Title: </strong> <%= @article.title %> </p>
            <p> <strong>Description: </strong> <%= @article.description %></p>
            <hr/>
            <% if @article.user%>
            <p class="author"> By <%= @article.user.username %> </p>
            <%end%>
            <div class="d-flex mt-3">

<% if logged_in? && @article.user == current_user %>

            <%= link_to 'Edit', edit_article_path(@article), class: "btn btn-primary mx-2" %> 
<%= button_to 'Delete', article_path(@article), method: :delete, data: {confirm: "Are you Sure?"} , class: "btn btn-primary mx-2" %>
<% end %>
<%= link_to 'Return to Article Listing', articles_path, class: "btn btn-primary mx-2" %>
        </div>
            
            </div>
            </div>




